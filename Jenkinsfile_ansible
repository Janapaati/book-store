pipeline {
    agent any
    
    environment {
        msname = "${params.microservice}"
    }
    stages{
        stage('deploy with ansible'){
            steps {
                ansiblePlaybook(
                    credentialsId: 'ansible'
                    inventory: '/etc/ansible/hosts', 
                    playbook: '/opt/ubuntu/copy.yaml',
                    extraVars   : [
                      msname: env.msname,
            ])
            }
        }
    }
}
